#!/bin/bash

usage() {
    echo "Usage: rssget [title] [URL]"
}

if [ "$#" -lt 2 ]; then
    usage
    exit 1;
fi

FEED="$2"
DIR="/mnt/media2/Videos/Anime/$1"
FEEDFILE="$HOME/.cache/rssget.feed"

# Pull links from feed and save them to a file
curl -s "$FEED" | grep -i -A 1 ".*title" | grep "link" | sed -e "s/<[^<>]*>//g;s/^[\t]*//" > "$FEEDFILE"

while read -r LINE; do
    #transmission-remote -a -w "$DIR" "$LINE"
done < "$FEEDFILE"

