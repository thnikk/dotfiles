#!/bin/bash

# Function for killing script if rofi comes back with failing exit code
exitOnFail() {
if [ $? -ne 0 ]; then
    exit 1
fi
}

# Loop until selection is file
WFFILE="/home/thnikk"
while [ -d "$WFFILE" ]; do
    WFFILE+="/$(echo ".."$'\n'"$(ls $WFFILE)" | rofi -dmenu -i)"
    #exitOnFail
    echo "$WFFILE"
done

xdg-open "$WFFILE"

