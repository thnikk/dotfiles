# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Disables mouse hovering making the hovered window active
focus_follows_mouse no

### Gaps ###
for_window [class="^.*"] border pixel 2
gaps inner 10
gaps outer 0

### Window Rules ###
# Use xprop for window info, case sensitive
for_window [class="Gnome-system-monitor|Virt-manager|Eog|Nautilus|Thunar|Nemo|Yad|Deluge|Pavucontrol|Gucharmap|Nitrogen|nitrogen|kunst|Kunst|Wine|Minecraft Launcher|minecraft-launcher|File-roller|Trackma-gtk"] floating enable
for_window [title="BSG Launcher|The Ditzy Demons Are In Love With Me (18+ DLC)"] floating enable
for_window [window_role="pop-up|bubble|task_dialog|Preferences|dialog|menu"] floating enable
for_window [class="looking-glass-client"] floating disable
for_window [class="mpv"] fullscreen enable
# Float all pop-up windows
for_window [window_role="pop-up"] floating enable

### Launch at startup ###
exec_always --no-startup-id ~/.config/polybar/launch.sh 1
exec_always --no-startup-id autotiling
exec --no-startup-id sxhkd -c ~/.config/sxhkd/i3.sxhkdrc
exec --no-startup-id sxhkd
# Always restart picom to avoid focused window being stuck at 100% opacity
exec_always --no-startup-id pkill -USR1 picom

font pango:Operator Mono Book 0

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Window decoration colors
# Border is top color of titlebar
# Background is color of title background
# Indicator is split color
# class        			            border  backgr. text    indicator child_border
client.unfocused                    #2b303b #2b303b #c0c5ce #2b303b   #2b303b
client.focused_inactive             #2b303b #2b303b #c0c5ce #2b303b   #2b303b
client.focused                      #bf616a #bf616a #eff1f5 #bf616a   #bf616a

